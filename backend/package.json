{
  "name": "@3xbat/backend",
  "version": "1.0.0",
  "description": "3xbat Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run clean && npm run build:ts && npm run build:prisma",
    "build:ts": "tsc",
    "build:prisma": "prisma generate",
    "build:prod": "npm run clean && npm run build:ts:prod && npm run build:prisma",
    "build:ts:prod": "tsc --project tsconfig.prod.json",
    "clean": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/helmet": "^0.0.48",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.7",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemon": "^3.1.10",
    "redis": "^4.6.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.11",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "betting",
    "casino",
    "api",
    "express",
    "typescript",
    "prisma"
  ],
  "author": "3xbat Team",
  "license": "MIT"
}
